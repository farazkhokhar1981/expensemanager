<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <androidx.cardview.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:layout_gravity="center"
            android:padding="5dp"
            android:orientation="horizontal"
            card_view:cardCornerRadius="4dp"
            card_view:cardElevation="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    >

                    <ListView
                        android:id="@+id/listView1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"></ListView>

                </FrameLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/colorWhite"
            android:padding="2dp">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="center_horizontal|center_vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical|center_horizontal"
                    >
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_income"
                        android:tint="@color/colorGreen"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Income"
                        android:padding="5dp"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        android:textColor="@color/colorGreen"/>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.0"
                    android:textSize="12dp"
                    android:padding="2dp"
                    android:textColor="@color/colorGreen"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="center_horizontal|center_vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical|center_horizontal"
                    >
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_exp_24"
                        android:tint="@color/colorRed"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Expense"
                        android:padding="5dp"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        android:textColor="@color/colorRed"/>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.0"
                    android:textSize="12dp"
                    android:padding="2dp"
                    android:textColor="@color/colorRed"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="center_horizontal|center_vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical|center_horizontal"
                    >
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_balance_24"
                        android:tint="@color/colorlGreen"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Balance"
                        android:padding="5dp"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        android:textColor="@color/colorlGreen"/>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.0"
                    android:textSize="12dp"
                    android:padding="2dp"
                    android:textColor="@color/colorlGreen"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:background="@color/colorLite2Gray"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="2sp"
                android:background="@color/colorgry"
                android:gravity="center_vertical|right"
                >
                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/all_btn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/button_circle"
                    android:gravity="center_horizontal|center_vertical"
                    android:layout_margin="3dp"
                    >
                    <TextView
                        android:id="@+id/all_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/all"
                        android:padding="3dp"
                        android:layout_gravity="center"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        android:textColor="@color/colorBlack"/>
                </LinearLayout>
                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/zero_btn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/button_none_circle"
                    android:gravity="center_horizontal|center_vertical"
                    android:layout_margin="3dp"
                    >
                    <TextView
                        android:id="@+id/zero_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:layout_gravity="center"
                        android:textSize="16dp"
                        android:padding="3dp"
                        android:textStyle="bold"
                        android:textColor="@color/colorBlack"/>
                </LinearLayout>
                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/plus_btn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/button_none_circle"
                    android:gravity="center_horizontal|center_vertical"
                    android:layout_margin="3dp"
                    >
                    <TextView
                        android:id="@+id/plus_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+"
                        android:layout_gravity="center"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:padding="3dp"
                        android:textColor="@color/colorGreens"/>
                </LinearLayout>
                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/minus_btn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/button_none_circle"
                    android:gravity="center_horizontal|center_vertical"
                    android:layout_margin="3dp"
                    >
                    <TextView
                        android:id="@+id/minus_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:padding="3dp"
                        android:layout_gravity="center"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:textColor="@color/colorRed"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/as_btn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/button_none_circle"
                    android:gravity="center_horizontal|center_vertical"
                    android:layout_margin="3dp"
                    >
                    <TextView
                        android:id="@+id/as_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AS"
                        android:layout_gravity="center"
                        android:textSize="12dp"
                        android:padding="3dp"
                        android:textStyle="bold"
                        android:textColor="@color/colorGreens"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:id="@+id/date_lay"
                    >
                    <LinearLayout
                        android:id="@+id/date_btn"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center_vertical|center_horizontal"
                        android:background="@drawable/transaction_bg"
                        android:layout_margin="3sp">
                        <TextView
                            android:id="@+id/date_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Select From Date"
                            android:textSize="11sp"
                            android:textStyle="bold"
                            android:textColor="@color/colorBlack"/>
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ds_btn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/button_none_circle"
                    android:gravity="center_horizontal|center_vertical"
                    android:layout_margin="3dp"
                    >
                    <TextView
                        android:id="@+id/ds_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DS"
                        android:layout_gravity="center"
                        android:textSize="12dp"
                        android:padding="3dp"
                        android:textStyle="bold"
                        android:textColor="@color/colorRed"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <androidx.core.widget.NestedScrollView
            android:id="@+id/activity_main"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingBottom="@dimen/activity_vertical_margin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.6">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/dailyTransactionList"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </androidx.recyclerview.widget.RecyclerView>

                </FrameLayout>






                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:background="@color/color2gry"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:text="@string/budget"
                        android:textColor="@color/colorBlack"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                </LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/budgetList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </FrameLayout>
                <FrameLayout
                    android:id="@+id/fl_adplaceholder2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp" />



            </LinearLayout>

        </androidx.core.widget.NestedScrollView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:gravity="center_vertical|center_horizontal"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:padding="3dp"
                android:gravity="center_horizontal|center_vertical">
                <LinearLayout
                    android:id="@+id/addIncome_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_gravity="right|bottom"
                    android:gravity="center_vertical|center_horizontal"
                    android:background="@drawable/rounded_blur_button"
                    >
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_add_income"
                        android:tint="@color/colorWhite"
                        android:padding="5dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/add_income"
                        android:textColor="@color/colorWhite"
                        android:textStyle="bold"
                        android:textSize="14dp"
                        android:padding="3dp"/>

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:padding="3dp"
                android:gravity="center_horizontal|center_vertical">
                <LinearLayout
                    android:id="@+id/addExpense_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_gravity="right|bottom"
                    android:gravity="center_vertical|center_horizontal"
                    android:background="@drawable/rounded_blur_button_red"
                    >
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_add_expense"
                        android:tint="@color/colorWhite"
                        android:padding="5dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/add_expense"
                        android:textColor="@color/colorWhite"
                        android:textStyle="bold"
                        android:textSize="14dp"
                        android:padding="3dp"/>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="0dp"
            card_view:cardElevation="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:background="@color/color2gry"
                >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:text="Opening"
                        android:textColor="@color/colorlGreen"
                        android:textSize="12dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/openingfinal_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:text="0.0$"
                        android:textColor="@color/colorlGreen"
                        android:textSize="10dp"
                        android:textStyle="bold" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+"
                        android:textColor="@color/colorlRed"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:padding="2dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="("
                        android:textColor="@color/colorlRed"
                        android:textSize="20dp"
                        android:padding="2dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="1dp"
                        android:text="Income"
                        android:textColor="@color/colorGreen"
                        android:textSize="12dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/incomeFinal_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="1dp"
                        android:text="0.0$"
                        android:textColor="@color/colorGreen"
                        android:textSize="10dp"
                        android:textStyle="bold" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textColor="@color/colorWhite"
                        android:textSize="18dp"
                        android:textStyle="bold"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="1dp"
                        android:text="Expense"
                        android:textColor="@color/colorRed"
                        android:textSize="12dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/expensefinal_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="1dp"
                        android:text="0.0$"
                        android:textColor="@color/colorRed"
                        android:textSize="10dp"
                        android:textStyle="bold" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=")"
                        android:textColor="@color/colorlRed"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:padding="1dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="="
                        android:textColor="@color/colorlRed"
                        android:textSize="20dp"
                        android:padding="5dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:text="Closing"
                        android:textColor="@color/colorlRed"
                        android:textSize="12dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/closingfinal_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:text="0.0$"
                        android:textColor="@color/colorlRed"
                        android:textSize="10dp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/colorWhite"
            >
            <LinearLayout
                android:id="@+id/home_btn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_margin="3dp"
                android:padding="3dp"
                android:gravity="center_horizontal|center_vertical">
                <ImageView
                    android:id="@+id/home_img"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_home_black_24dp"
                    android:tint="@color/colorlightRed"
                    android:padding="1dp"/>
                <TextView
                    android:id="@+id/home_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dashboard_menu"
                    android:textStyle="bold"
                    android:textColor="@color/colorlightRed"
                    android:padding="2dp"
                    android:textSize="13dp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/more_btn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_margin="3dp"
                android:padding="3dp"
                android:gravity="center_horizontal|center_vertical">
                <ImageView
                    android:id="@+id/more_img"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_more_black_24dp"
                    android:tint="@color/colorLiteGray"
                    android:padding="1dp"/>
                <TextView
                    android:id="@+id/more_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/more"
                    android:textStyle="bold"
                    android:textColor="@color/colorLiteGray"
                    android:padding="2dp"
                    android:textSize="13dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>